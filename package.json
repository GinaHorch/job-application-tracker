{
  "name": "job-application-tracker",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "react-scripts build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron": "^latest",
    "electron-builder": "^latest",
    "react": "^latest",
    "react-dom": "^latest"
  },
  "build": {
    "appId": "com.yourcompany.jobapplicationtracker",
    "productName": "Job Application Tracker",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}